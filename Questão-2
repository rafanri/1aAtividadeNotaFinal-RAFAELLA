<body>

    <div class="container">
        <h1>Soma de Dois Números</h1>
        <input type="number" id="num1" placeholder="Número 1">
        <input type="number" id="num2" placeholder="Número 2"><br>
        <button onclick="Somar()">Somar</button>
        <p id="resultado"></p>
    </div>

<script>

function Somar() {
    let n1 = parseFloat(document.getElementById("num1").value);
    let n2 = parseFloat(document.getElementById("num2").value);
    let soma = n1 + n2;

if (isNaN(soma)) {
    document.getElementById("resultado").textContent = "Por favor, digite dois números válidos.";
} else {
    document.getElementById("resultado").textContent = "Resultado: " + soma;
}

}
</script>

